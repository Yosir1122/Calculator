<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end">
        <TextView
            android:id="@+id/txt_ekran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:padding="25dp"
            android:textSize="70sp"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:columnCount="4"
        android:rowCount="5">
        <Button
            android:id="@+id/btn_AC"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="AC"
            android:textSize="20sp"
            android:backgroundTint="#F80320"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Delete"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>

        <Button
            android:id="@+id/btn_bolish"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="/"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>
        <Button
            android:id="@+id/btn_7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_9"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_kopaytruv"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Ã—"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>/>
        <Button
            android:id="@+id/btn_4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_ayrish"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="-"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>/>
        <Button
            android:id="@+id/btn_1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_qoshish"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="+"
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>/>

        <Button
            android:id="@+id/btn_0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textSize="30sp"
            android:backgroundTint="#03A9F4"/>
        <Button
            android:id="@+id/btn_nuqta"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="."
            android:textSize="20sp"
            android:backgroundTint="#03A9F4"/>/>
        <Button
            android:id="@+id/btn_teng"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="="
            android:textSize="20sp"
            android:backgroundTint="#FF5722"/>/>
    </GridLayout>
</LinearLayout>